                    ['$<TARGET_FILE_NAME:${SWIG_MODULE_core_REAL_NAME}>']},
    include_package_data = True,
    distclass = BinaryDistribution,

    # package information
    version = '${VERSION_MAJOR}.${VERSION_MINOR}',
    url = '${PROJECT_URL}',
    author = '${PROJECT_AUTHOR}',
    author_email = '${PROJECT_EMAIL}'
